<h1> <%= @merchant.name %>'s Coupons </h1>
<p> Create New Coupon: <%= link_to "New Coupon", "/merchants/#{@merchant.id}/coupons/new" %>
<br>
===============================================================
<h2> Active Coupons </h2>
<section id="active">
  <% @active_coupons.each do |coupon| %>
---------------------------------------------------
   <p> Coupon: <%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %> </p>
   <p> Amount Off: <%= coupon.amt_off %><%= coupon.dollar_or_percent %> </p>
   <p> Coupon Code: <%= coupon.uniq_code %> </p>
  <% end %>
</section>
<br>
===============================================================
<h2> Inactive Coupons </h2>
<section id="inactive">
  <% @inactive_coupons.each do |coupon| %>
  ---------------------------------------------------
   <p> Coupon: <%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %> </p>
   <p> Amount Off: <%= coupon.amt_off %><%= coupon.dollar_or_percent %> </p>
   <p> Coupon Code: <%= coupon.uniq_code %> </p>
  <% end %>
</section>

